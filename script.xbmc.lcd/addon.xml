<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.xbmc.lcd" name="XBMC LCD/VFD" version="1.0.0" provider-name="Memphiz">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.module.elementtree" version="1.2.7"/>
  </requires>
  <extension point="xbmc.service" library="lcdmain.py" start="login"></extension>
  <extension point="xbmc.addon.metadata">
    <summary>XBMC LCD/VFD</summary>
    <description>This addon will add the LCD/VFD feature which was integrated into XBMC before. There has to be an lcdproc daemon (LCDd) running somewhere in the network or local to use the addon.</description>
    <platform>all</platform>
  </extension>
</addon>
